<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Products List</h6>
            <a href="">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">Book Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Prices</th>
                        <th scope="col">img</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @{
                                    <!-- Phần này khó vl (nhớ xoá cmt rồi nộp bài) -->
                                    if (ViewBag.Category != null)
                                    {
                                        foreach (var category in ViewBag.Category)
                                        {
                                            if (category.Id == item.CategoryId)
                                            {
                                                @category.NameCat
                                                break;
                                            }
                                        }
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price) $
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.Img)"><img src="@Html.DisplayFor(modelItem => item.Img)" width="70px" height="70px"></a>
                                
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="ProductDetails" asp-route-id="@item.Id">Details</a>
                            </td>
                            <td>
                                <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                                </form>
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
