@model List<Libary1670.Models.Products> 

@{
	ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<!-- Input Data -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Products Add</h6>
        <form method="post" asp-action="Products">

            <div class="mb-3">
                <label for="Name" class="form-label">Book Name</label>
                <input type="Name" class="form-control" id="Name" name="Name" value="" placeholder="Name">
                <div id="emailHelp" class="form-text">
                </div>
            </div>

            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input type="Price" class="form-control" id="Price" name="Price" value="" placeholder="Price">
            </div>


            <div class="mb-3">
                <label for="Img" class="form-label">Link</label>
                <input type="Img" class="form-control" id="Img" name="Img" value="" placeholder="Img">
            </div>


            <div class="mb-3">
                <label for="Category" class="form-label">Category</label>
                <select class="form-select" id="Category" name="CategoryId" aria-label="Select category">
                    <option value="">Select a category...</option>
                    @foreach (var category in ViewBag.Category)
                    {
                        <option value="@category.Id">@category.NameCat</option>
                    }
                </select>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
<!-- Sale & Revenue End -->
